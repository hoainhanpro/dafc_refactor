{
  "name": "dafc-otb-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@dafc/web",
    "dev:api": "turbo run dev --filter=@dafc/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:stress": "pnpm --filter @dafc/api run test:stress",
    "test:load": "pnpm --filter @dafc/api run test:load",
    "test:e2e": "pnpm --filter @dafc/web run test:e2e",
    "test:e2e:ui": "pnpm --filter @dafc/web run test:e2e:ui",
    "test:all": "pnpm test && pnpm test:stress && pnpm test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate --filter=@dafc/database",
    "db:push": "turbo run db:push --filter=@dafc/database",
    "db:seed": "turbo run db:seed --filter=@dafc/database",
    "db:studio": "pnpm --filter @dafc/database exec prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
