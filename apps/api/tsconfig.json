{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/modules/*": [
        "src/application/modules/*"
      ],
      "@/common/*": [
        "src/application/shared/*"
      ],
      "@/core/*": [
        "src/core/*"
      ],
      "@/infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@/application/*": [
        "src/application/*"
      ],
      "@dafc/shared": [
        "../../packages/shared/src"
      ],
      "@dafc/database": [
        "../../packages/database/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}